#!/usr/bin/env perl6

use Module::Build;
use Module::Test;
use Module::Install;

sub MAIN(Str $what?) {
    given $what {
        when 'test' {
            Module::Test::test()
        }
        when 'install' {
            Module::Install::install(:v)
        }
        when ! *.defined {
            Module::Build::build(:v)
        }
        default {
            note "unrecognized option: $what"
        }
    }
}

# vim: ft=perl6
